<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MVVMDagger" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimary700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MVVMDagger.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MVVMDagger.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MVVMDagger.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextViewTheme">
        <item name="android:gravity">start</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">viewStart</item>
    </style>

    <style name="CustomProgress" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/clr_FB4A46</item>
    </style>


    <style name="EditTextTheme" parent="Widget.AppCompat.EditText">
        <!-- Customize your theme here. -->
        <item name="android:lines">1</item>
        <item name="android:maxLength">40</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">viewStart</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="SideMenuFont" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/clr_222B45</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="TextStyle.Heading" parent="TextStyle">
        <item name="android:textSize">16sp</item>
    </style>


    <style name="Toolbar.TitleText" parent="TextStyle.Heading">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Address.TitleText" parent="TextStyle.Heading">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Toolbar" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="Button.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:padding">5dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@null</item>
    </style>

    <style name="customRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/customratingbar</item>
        <item name="android:minHeight">22dip</item>
        <item name="android:maxHeight">22dip</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/curved_border_top_white</item>

    </style>

    <style name="MaterialCard" parent="Theme.MaterialComponents"/>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>


    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">13dp</item>
        <item name="cornerSizeTopLeft">13dp</item>
    </style>

    <style name="Theme_Dialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="notDraggable" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="behavior_draggable">false</item>
        <item name="android:background">@drawable/curved_border_top_white</item>
    </style>



</resources>