<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/clr_F7F9FC">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/txt_notification_date_time_simmer"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@color/light_grey"
            android:fontFamily="@font/roboto_medium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_6sdp"
            />
        <ImageView
            android:id="@+id/profile_notification_helper_simmer"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/simple_profile_bg"
            app:layout_constraintTop_toBottomOf="@+id/txt_notification_date_time_simmer"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            />
        <View
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:background="@color/light_grey"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/txt_notification_date_time_simmer"
            app:layout_constraintStart_toEndOf="@id/profile_notification_helper_simmer"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <View
            android:id="@+id/message"
            android:layout_width="0dp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:background="@color/light_grey"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toEndOf="@id/profile_notification_helper_simmer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/_10sdp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>