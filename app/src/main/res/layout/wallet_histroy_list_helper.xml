<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_8sdp"
    app:cardElevation="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_6sdp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/type_wallet_helper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/roboto_medium"
            android:text="hellow world"
            android:textAllCaps="false"
            android:textColor="@color/clr_222B45"
            android:textSize="@dimen/_12sdp" />
        <TextView
            android:id="@+id/total_amount_wallet_helper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="hellow world"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:textAllCaps="false"
            android:textColor="@color/clr_222B45"
            android:textSize="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/created_at_wallet_helper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/type_wallet_helper"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/roboto_regular"
            android:text="hellow world"
            android:textAllCaps="false"
            android:textColor="@color/clr_gray_light2"
            android:textSize="@dimen/_12sdp" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>