<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.cloneUser.client.loginOrSignup.getStarteedScrn.GetStartedScreenVM" />

        <import type="android.view.View" />

        <import type="com.cloneUser.client.BuildConfig" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/_40sdp"
                android:src="@mipmap/road_logo_adjust" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_horizontal"
                android:text="@string/app_name"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp" />



        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/lang_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/logo"
            android:layout_marginTop="@dimen/_10sdp"
            app:cardElevation="@dimen/_10sdp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/choose_lang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/select_language"
                    android:textColor="@color/clr_222B45"
                    android:textSize="@dimen/_16sdp" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/lang_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/choose_lang" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/set_lang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_above="@id/space"
                    android:layout_marginLeft="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_18sdp"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="@{()->viewModel.onClickSetLanguage()}"
                    android:orientation="horizontal"
                    app:cardBackgroundColor="@color/clr_FB4A46"
                    app:cardCornerRadius="@dimen/_3sdp"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/_8sdp"
                        android:text="@string/set_language"
                        android:textAllCaps="true"
                        android:textColor="@color/buttonTextColor"
                        android:textSize="@dimen/_12sdp" />
                </androidx.cardview.widget.CardView>


                <Space
                    android:id="@+id/space"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp" />


                <include
                    android:id="@+id/progressBar"
                    layout="@layout/progress_dialog"
                    android:visibility="@{viewModel.isLoading() ? View.VISIBLE : View.GONE}" />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>





    </RelativeLayout>

</layout>